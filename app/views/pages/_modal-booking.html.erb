<div class="container d-flex  justify-content-center my-4">
  <div class="container">
    <div class="container art-piece-grid">
      <% @user.bookings.each do |booking| %>
        <div class="card-art-piece">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% booking.art_piece.photos.each_with_index do |photo, i| %>
                <div class="carousel-item <%= "active" if i.zero? %>">
                <%= cl_image_tag photo.key, crop: :fill, class:"img-index" %>
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-art-piece-infos">
          <div>
            <h2><%= booking.art_piece.title %></h2>
            <p><%= booking.art_piece.artist %>.</p>
              <div class="functional-buttons">
                <h2><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } %></h2>
              </div>
          <%= link_to "", art_piece_path, class: "card-link img-index" %>
          </div>
          <h2 class="card-art-piece-pricing">
            %= "#{booking.art_piece.price} â‚¬ | mth" %>
          </h2>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
