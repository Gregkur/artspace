    <div class="container d-flex  justify-content-center my-4">

      <div class="container">

        <div class="container art-piece-grid">
          <% @user.bookings.each do |booking| %>
        <div class="card-art-piece">

          <% if booking.art_piece.photos.attached? %>
            <%= cl_image_tag booking.art_piece.photos[0].key, crop: :fill, class:"img-index" %>
          <% else %>
            <img class="img-index" src="https://images.unsplash.com/photo-1581783342308-f792dbdd27c5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1834&q=80"/>
          <% end %>

          <div class="card-art-piece-infos">
          
            <div>

              <h2><%= booking.art_piece.title %></h2>
              <p><%= booking.art_piece.artist %>.</p>

                <div class="functional-buttons">
                  <h2><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } %></h2>
                </div>

            </div>

          <h2 class="card-art-piece-pricing"><%= "#{booking.art_piece.price} â‚¬ | mth" %></h2>

          </div>

          <%= link_to "", art_piece_path, class: "card-link img-index" %>


          </div>

         
        <% end %>
        
      </div>

    </div>

    </div>
    