    <div class="container">
      <h1>Here you see an amazing piece of art</h1>
      <h1 class="title"><%= @art_piece.title %></h1>
      <div class="row">
        <div class="col-12 col-lg-8">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
