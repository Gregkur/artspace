            <form action="/">
              <div class="form-group">
                <label for="message">Your message</label>
                <input type="text" placeholder="Your message" id="message" class="form-control">
              </div>
              <div class="form-group">
                <label for="arrival">From</label>
                <input type="date" id="arrival" class="form-control">
              </div>
              <div class="form-group">
                <label for="departure">Until</label>
                <input type="date" id="departure" class="form-control">
