<div class="container">

  <div class="navbar border-bottom">
    <div class="container">
      <img src="images/logo.png" alt="Logo" height="50">
      <a href="/" class="btn btn-primary">Login</a>
    </div>
  </div>

  <div class="carousel-container">
    <h1 class="mt-3 text-center"><%= @art_piece.title %></h1>
    <div class="row">
      <div class="col-12 col-lg-8 col-centered">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
            <div class="carousel-item active">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>


    <div class="details-booking-container">
      <div class="row">
          <div class="col-sm-12 col-lg-8">
            <h3 class="mt-3">Details:</h3>
            <ul>
              <p> Artist: <%= @art_piece.auhor %> </p>
              <p> Price: <%= @art_piece.price %> â‚¬ / week </p>
              <% if @art_piece.availability %>
                <%= 'currently available' %>
              <% else %>
                <%= 'We`re sorry, this piece is currently rented by someone else' %>
              <% end %>
              <div class="avatar">
                <img src="" alt="user_avatar" class="avatar avatar-small">
              </div>
            </ul>
            <div class="booking col-12 col-lg-8">
              <p> <%= @art_piece.description %> Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis atque saepe recusandae possimus reprehenderit doloribus, ratione, quasi eum. Ex voluptatibus fugiat at natus? Vel consequatur dignissimos ea ab porro qui. </p>
            </div>
          </div>
        <div class="col-12 col-md-8 col-lg-4">
          <div class="border p-4 rounded mt-4">
            <h2>Book this masterpiece</h2>
            <form action="/">
              <div class="form-group">
                <label for="message">Your message</label>
                <input type="text" placeholder="Your message" id="message" class="form-control">
              </div>
              <div class="form-group">
                <label for="arrival">From</label>
                <input type="date" id="arrival" class="form-control">
              </div>
              <div class="form-group">
                <label for="departure">Until</label>
                <input type="date" id="departure" class="form-control">
              </div>
              <input type="submit" value="Book now" class="btn form-control" id="btn-submit">
            </form>
          </div>
        </div>
      </div>
    </div>


  <%= link_to "Back to all art pieces", art_pieces_path %>


</div>
