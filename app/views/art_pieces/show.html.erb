
<div class="container">

  <div class="carousel-container">
    <h1 class="mt-3 text-center"><%= @art_piece.title %></h1>
    <div class="row">
      <div class="col-12 col-lg-8 col-centered">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
            <div class="carousel-item active">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://picsum.photos/600/350" class="d-block w-100 mt-4 rounded" alt="...">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>


  <div class="details-booking-container">
    <div class="row">
      <div class="col-sm-12 col-lg-8 border">
        <h3 class="mt-3">Details:</h3>
        <ul>
          <p> Artist: <%= @art_piece.author %> </p>
          <p> Price: <%= @art_piece.price %> â‚¬ / week </p>
          <% if @art_piece.availability %>
            <%= 'currently available' %>
          <% else %>
            <%= 'We`re sorry, this piece is currently rented by someone else' %>
          <% end %>
          <div class="avatar">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/krokrob", class: "avatar-square", alt: "avatar-square" %>
            <%= "Offered by #{@art_piece.user.email}" %>
          </div>
        </ul>
        <div class="booking col-12 col-lg-8">
          <p class="piece-description"> <%= @art_piece.description %> Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis atque saepe recusandae possimus reprehenderit doloribus, ratione, quasi eum. Ex voluptatibus fugiat at natus? Vel consequatur dignissimos ea ab porro qui. </p>
        </div>
      </div>
      <div class="col-12 col-md-8 col-lg-4">
        <div class="border p-4 rounded mt-4">
          <h2 id="<%= @booking_created ? 'hello' : nil %>">Book this masterpiece</h2>
          <%= simple_form_for [@art_piece, @booking] do |f| %>
            <%= f.input :check_in %>
            <%= f.input :check_out %>
            <%= f.submit "create", class: "btn btn-primary" %>
         <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
<%= render "footer" %>
